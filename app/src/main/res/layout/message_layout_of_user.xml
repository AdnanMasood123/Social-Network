<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/reciever_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@id/message_profile_image"
        android:background="@drawable/reciever_background"
        android:padding="10dp"
        android:text="Reciever Message"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp">

    </TextView>


    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="184dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@id/message_profile_image"
        android:background="@drawable/sender_background"
        android:padding="10dp"
        android:text="Sender Message"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"></TextView>


</RelativeLayout>