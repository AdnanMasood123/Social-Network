<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".AddPostActivity">


    <EditText
        android:id="@+id/write_post"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_below="@+id/post_click"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/post_border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="write something about your post"
        android:inputType="textMultiLine"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_click"
        app:layout_constraintVertical_bias="1.0">
    </EditText>

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout"
        android:layout_width="407dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></include>

    <ImageButton
        android:id="@+id/update"
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_above="@+id/post_click"
        android:layout_below="@id/main_page_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/Facebook_Color"
        android:baselineAlignBottom="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitEnd"
        android:src="@drawable/add_post_high"
        app:layout_constraintBottom_toBottomOf="@+id/main_page_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/main_page_toolbar"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/main_page_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592">
    </ImageButton>

    <ImageView
        android:id="@+id/post_click"
        android:layout_width="match_parent"
        android:layout_height="353dp"
        android:layout_above="@+id/write_post"
        android:layout_below="@+id/main_page_toolbar"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/select_image"
        android:background="@drawable/post_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_page_toolbar">
    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>